                    <field name="order_id"/>
                    <field name="partner_id"/>
                    <field name="state"/>
                    <field name="return_state"/>
                    <field name="create_uid" string="制单人"/>
                    <filter name="draft" string="未审核" domain="[('state','=','draft')]"/>
