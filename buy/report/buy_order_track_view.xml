<?xml version="1.0"?>
<openerp>
    <data>
    	<record id="buy_order_track_tree" model="ir.ui.view">
            <field name="name">buy.order.track.tree</field>
            <field name="model">buy.order.track</field>
            <field name="arch" type="xml">
                <tree string="采购订单跟踪表" create="false">
                	<field name="goods_code"/>
                    <field name="goods_id"/>
                    <button name="view_detail" type="object" string="查看明细" icon="fa-search"
                    	attrs="{'invisible': [('goods_id','=',False)]}"/>
                    <field name="attribute" groups='goods.multi_attrs_groups'/>
                    <field name="uom"/>
                    <field name="date"/>
                    <field name="order_name"/>
                    <field name="partner_id"/>
                    <field name="warehouse_dest_id"/>
                    <field name="goods_state"/>
                    <field name="qty"/>
                    <field name="amount"/>
                    <field name="qty_not_in"/>
                    <field name="planned_date"/>
                    <field name="wh_in_date"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>
