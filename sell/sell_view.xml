    	<!--销货订单，销售发货单action-->
    	<record id='sell_order_action' model='ir.actions.act_window'>
        	<field name='name'>销货订单</field>
        	<field name='res_model'>sell.order</field>
        	<field name='view_type'>form</field>
        	<field name='view_mode'>tree,form</field>
