<odoo>

    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Website Portal sell">
      <xpath expr="." position="inside">
          <link rel='stylesheet' href='/good_portal_sell/static/src/less/good_portal_sell.less'/>
      </xpath>
    </template>

    <template id="portal_my_home_sell" name="Portal My Home : sell entries" inherit_id="good_portal.portal_my_home" priority="25">
        <xpath expr="//div[contains(@class,'o_my_home_content')]" position="inside">
            <h3 class="page-header">
                <a href="/my/orders">销售订单
                    <small class="ml8">
                        <t t-if="order_count">
                            <span class='badge'><t t-esc="order_count"/></span>
                        </t>
                        <t t-if="not order_count">没有订单
                        </t>
                    </small>
                </a>
            </h3>
        </xpath>
    </template>

    <template id="portal_my_orders" name="My Sell Orders">
      <t t-call="good_portal.portal_layout">
        <h3 class="page-header">销售订单</h3>
        <t t-if="not orders">
            <p>没有订单</p>
        </t>
        <t t-if="orders">
            <table class="table table-hover o_my_status_table">
                <thead>
                  <tr class="active">
                    <th width="15%">销售订单 #</th>
                    <th width="20%">订单日期</th>
                    <th width="10%"></th>
                    <th width="15%">发货状态</th>
                    <th width="20%">已付金额</th>
                    <th width="20%">金额</th>
                  </tr>
                </thead>
                <t t-foreach="orders" t-as="order">
                    <tr>
                        <td>
                            <a t-attf-href="/my/orders/{{order.id}}?{{keep_query()}}"><t t-esc="order.name"/></a>
                        </td>
                        <td><span t-field="order.date"/></td>
                        <td>
                            <t t-if="order.state == 'draft'">
                                <span class="label label-info"><i class="fa fa-fw fa-clock-o"/> 未审核 </span>
                            </t>
                            <t t-if="order.state == 'done'">
                                <span class="label label-danger"><i class="fa fa-fw fa-warning"/> 已审核 </span>
                            </t>
                        </td>
                        <td><span t-field="order.goods_state"/></td>
                        <td><span t-field="order.received_amount" t-options='{"widget": "monetary", "display_currency": order.currency_id}'/></td>
                        <td><span t-field="order.amount" t-options='{"widget": "monetary", "display_currency": order.currency_id}'/></td>
                    </tr>
                </t>
            </table>
            <!-- <div t-if="pager" class="o_portal_pager text-center">
              <t t-call="website.pager"/>
            </div> -->
        </t>
      </t>
    </template>

    <template id="orders_followup" name="Sales Order">
      <t t-call="website.layout">
        <div id="wrap">
            <div class="container">
              <div class="oe_structure">
                <div class="row">
                    <div class="col-sm-4">
                        <ol class="breadcrumb mt8">
                            <li><a href="/my/home"><i class="fa fa-home"/></a></li>
                            <li>
                              <a t-attf-href="/my/#{'orders'}?{{ keep_query()}}">销售订单</a>
                            </li>
                            <li>订单
                              <t t-esc="order.name"/>
                            </li>
                        </ol>
                    </div>
                </div>
              </div>
              <div id="optional_placeholder"></div>
              <div class="container">
                  <div class="panel panel-default">
                    <div class="panel-heading">
                      <div class="row">
                        <div class="col-md-12">
                          <h4>订单
                            <span t-esc="order.name"/>
                          </h4>
                        </div>
                      </div>
                    </div>
                    <div class="panel-body">
                      <div>
                        <div class='mb8'>
                            <strong>创建日期：</strong>
                            <span t-field="order.date" t-options='{"widget": "date"}'/>
                        </div>
                        <div class='mb8'>
                            <strong>交货日期：</strong>
                            <span t-field="order.delivery_date" t-options='{"widget": "date"}'/>
                        </div>
                        <div class='mb8'>
                            <strong>地址：</strong>
                            <span t-field="order.partner_id.address" />
                        </div>
                        <div class='mb8'>
                            <strong>联系人：</strong>
                            <span t-field="order.partner_id.main_contact"/>
                        </div>
                        <div class='mb8'>
                            <strong>联系电话：</strong>
                            <span t-field="order.partner_id.main_mobile"/>
                        </div>
                       </div>
                      <hr/>
                      <div class="row">
                        <div class="col-md-5">
                          <strong>产品</strong>
                        </div>
                        <div class="col-md-2 text-right">
                          <strong>单价</strong>
                        </div>
                        <div class="col-md-2 text-right">
                          <strong>数量</strong>
                        </div>
                        <div class="col-md-2 text-right">
                          <strong>小计</strong>
                        </div>
                      </div>
                      <t t-foreach="order.line_ids" t-as="ol">
                        <div class="row orders_vertical_align">
                            <div id='goods_name' class="col-md-5">
                              <span t-esc="ol.goods_id.name"/>
                                <t t-if="ol.attribute_id">
                                    <span t-esc="ol.attribute_id.name"/>
                                </t>
                            </div>
                            <div class="col-md-2 text-right">
                              <span t-field="ol.price" t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                            </div>
                            <div class="col-md-2 text-right">
                              <span t-esc="ol.quantity"/>
                            </div>
                            <div class="col-md-2 text-right">
                              <span t-field="ol.subtotal" t-options='{"widget": "monetary", "display_currency": order.currency_id}'/>
                            </div>
                        </div>
                      </t>
                      <hr/>
                      <div class="row">
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-5">
                          <div class="row">
                            <div class="col-md-10 text-right">
                              <strong>总计:</strong>
                            </div>
                            <div class="col-md-2 text-right">
                              <strong><span t-field="order.amount" t-options='{"widget": "monetary", "display_currency": order.currency_id}'/></strong>
                            </div>
                          </div>
                        </div>
                      </div>

                      <!-- 添加发送消息div -->
                      <div id='sell_order_message'>
                      </div>

                    </div>
                  </div>
              </div>
              <div class="oe_structure mb32"/>
          </div>
        </div>
      </t>
    </template>

    <template id="sell_order_chatter" name="Allow Send Comments" customize_show="True" inherit_id="orders_followup">
      <xpath expr="//div[@id='sell_order_message']" position="inside">
          <section id="discussion" class="hidden-print">
              <h3 class="page-header">消息</h3>
              <t t-call="website_mail.message_thread">
                <t t-set="object" t-value="order"/>
                <t t-set="token_field" t-value="'access_token'"/>
                <t t-set="chatter_mode" t-value="'json'"/>
              </t>
          </section>
      </xpath>
    </template>

</odoo>
